<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceML</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                <i class="fas fa-chart-line me-2"></i>EcommerceML
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-1"></i>Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Sentiment" asp-action="Index"><i class="fas fa-face-smile me-1"></i>Sentimientos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Recommendation" asp-action="Index"><i class="fas fa-star me-1"></i>Recomendaciones</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto shadow-sm">
        <small>&copy; 2025 - EcommerceML - Todos los derechos reservados</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
